<h1>Корзина</h1>
{{#if courses.length}}
  <table>
    <thead>
      <tr>
        <th>Название</th>
        <th>Количество</th>
        <th>Действия</th>
      </tr>
    </thead>
    <tbody>
      {{#each courses}}
        <tr>
          <th>{{title}}</th>
          <th>{{count}}</th>
          <th>
            <button class='btn btn-small'>Удалить</button>
          </th>
        </tr>
      {{/each}}
    </tbody>
  </table>
  <p><strong>Цена:</strong> <span class='price'>{{price}}</span></p>
{{else}}
{{/if}}